{
  "name": "Startpage",
  "description": "Startpage's search engine and Anonymous View feature are free and simple ways to take control of your online privacy.",
  "manifest_version": 2,
  "version": "1.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "startpage@search.waterfox.net"
    }
  },
  "hidden": true,
  "icons": {
    "16": "favicon.ico",
    "144": "favicon.png"
  },
  "web_accessible_resources": [
    "favicon.ico",
    "faicon.png"
  ],
  "chrome_settings_overrides": {
    "search_provider": {
      "keyword": "@sp",
      "name": "Startpage",
      "search_url": "https://www.startpage.com/sp/search",
      "search_form": "https://www.startpage.com/",
      "search_url_post_params": "query={searchTerms}&segment=startpage.waterfox.1",
      "suggest_url": "https://www.startpage.com/suggestions",
      "suggest_url_get_params": "q={searchTerms}&format=opensearch"
    }
  }
}