DIRS += ['resources']

XPIDL_SOURCES += [
    'nsIASN1Tree.idl',
]

XPIDL_MODULE = 'pippki'

UNIFIED_SOURCES += [
    'nsASN1Tree.cpp',
    'nsNSSDialogHelper.cpp',
    'nsNSSDialogs.cpp',
    'nsPKIModule.cpp',
]

LOCAL_INCLUDES += [
    '!/dist/public/nss',
]

FINAL_LIBRARY = 'xul'

if CONFIG['GNU_CXX']:
    CXXFLAGS += [
        '-Wextra',
        # -Wextra enables this warning, but it's too noisy to be useful.
        '-Wno-missing-field-initializers',
    ]

    # Gecko headers aren't warning-free enough for us to enable these warnings.
    CXXFLAGS += [
        '-Wno-unused-parameter',
    ]
