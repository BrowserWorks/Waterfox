include "mozilla/dom/MediaIPCUtils.h";

using mozilla::media::TimeUnit from "TimeUnits.h";

namespace mozilla {

// used for both SendInput/RecvInput and ProcessDecodedData/RecvOutput
struct MediaDataIPDL
{
  int64_t offset;
  TimeUnit time;
  TimeUnit timecode;
  TimeUnit duration;
  bool keyframe;
};

// used for SendInput/RecvInput
struct MediaRawDataIPDL
{
  MediaDataIPDL base;
  bool eos;
  uint32_t discardPadding;
  // Pass along buffer size since we're using ShmemPool
  // and we can receive buffers larger than requested size.
  int64_t bufferSize;
  Shmem buffer;
};

} // namespace mozilla
