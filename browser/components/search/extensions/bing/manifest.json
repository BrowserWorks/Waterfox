{
  "name": "Bing",
  "description": "Bing helps you turn information into action, making it faster and easier to go from searching to doing.",
  "manifest_version": 2,
  "version": "1.3",
  "applications": {
    "gecko": {
      "id": "bing@search.waterfox.net"
    }
  },
  "hidden": true,
  "icons": {
    "16": "favicon.ico"
  },
  "web_accessible_resources": [
    "favicon.ico"
  ],
  "chrome_settings_overrides": {
    "search_provider": {
      "keyword": "@bing",
      "name": "Bing",
      "search_url": "https://www.bing.com/search",
      "search_form": "https://www.bing.com/search?PC=IS45&PTAG=SYS1000000&q={searchTerms}",
      "search_url_get_params": "PC=IS45&PTAG=SYS1000000&q={searchTerms}",
      "params": [
        {
          "name": "form",
          "condition": "purpose",
          "purpose": "contextmenu",
          "value": "ISCHR1"
        },
        {
          "name": "form",
          "condition": "purpose",
          "purpose": "searchbar",
          "value": "ISCHR1"
        },
        {
          "name": "form",
          "condition": "purpose",
          "purpose": "homepage",
          "value": "ISCHR1"
        },
        {
          "name": "form",
          "condition": "purpose",
          "purpose": "keyword",
          "value": "ISCHR1"
        },
        {
          "name": "form",
          "condition": "purpose",
          "purpose": "newtab",
          "value": "ISCHR1"
        }
      ],
      "suggest_url": "https://www.bing.com/osjson.aspx",
      "suggest_url_get_params": "query={searchTerms}&form=OSDJAS&language={moz:locale}"
    }
  }
}
