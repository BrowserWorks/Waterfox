MOZ_AUTOMATION_SDK=${MOZ_AUTOMATION_SDK-1}

if [ -n "$ENABLE_RELEASE_PROMOTION" ]; then
  MOZ_AUTOMATION_UPLOAD_SYMBOLS=${MOZ_AUTOMATION_UPLOAD_SYMBOLS-1}
  MOZ_AUTOMATION_UPDATE_PACKAGING=1
fi

