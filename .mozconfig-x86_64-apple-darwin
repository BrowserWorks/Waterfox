MOZ_FETCHES_DIR=$HOME/toolmac11

# export CBINDGEN="$MOZ_FETCHES_DIR/cbindgen/cbindgen"

CROSS_SYSROOT=$MOZ_FETCHES_DIR/MacOSX10.13.sdk
CROSS_PRIVATE_FRAMEWORKS=$CROSS_SYSROOT/System/Library/PrivateFrameworks
FLAGS="-target x86_64-apple-darwin -B $MOZ_FETCHES_DIR/cctools/bin -isysroot $CROSS_SYSROOT"

export BINDGEN_CFLAGS="$FLAGS"
export CC="$MOZ_FETCHES_DIR/clang/bin/clang $FLAGS"
export CPP="$MOZ_FETCHES_DIR/clang/bin/clang $FLAGS -E"
export CXX="$MOZ_FETCHES_DIR/clang/bin/clang++ $FLAGS"
export DMG_TOOL=$MOZ_FETCHES_DIR/dmg/dmg
export DSYMUTIL=$MOZ_FETCHES_DIR/clang/bin/dsymutil
export HFS_TOOL=$MOZ_FETCHES_DIR/dmg/hfsplus
export HOST_CC="$MOZ_FETCHES_DIR/clang/bin/clang"
export HOST_CFLAGS="-g"
export HOST_CPP="$MOZ_FETCHES_DIR/clang/bin/clang -E"
export HOST_CXX="$MOZ_FETCHES_DIR/clang/bin/clang++"
export HOST_CXXFLAGS="-g"
export HOST_LD="$MOZ_FETCHES_DIR/clang/bin/lld"
export HOST_LDFLAGS="-g"
export LD="$MOZ_FETCHES_DIR/clang/bin/lld"
export LDFLAGS="-Wl,-syslibroot,$CROSS_SYSROOT -Wl,-dead_strip"
export LLVMCONFIG=$MOZ_FETCHES_DIR/clang/bin/llvm-config
export MKFSHFS=$MOZ_FETCHES_DIR/hfsplus-tools/newfs_hfs
export OSXCROSS_PKG_CONFIG_USE_NATIVE_VARIABLES=1
export MACOS_SDK_DIR=$CROSS_SYSROOT
export MACOS_PRIVATE_FRAMEWORKS_DIR=$CROSS_PRIVATE_FRAMEWORKS

export CROSS_COMPILE=1

mk_add_options "export PATH=$MOZ_FETCHES_DIR/cctools/bin:$MOZ_FETCHES_DIR/binutils/bin:$MOZ_FETCHES_DIR/llvm-dsymutil/bin:$PATH"
mk_add_options "export REAL_DSYMUTIL=$MOZ_FETCHES_DIR/llvm-dsymutil/bin/dsymutil"
mk_add_options "export LD_LIBRARY_PATH=$MOZ_FETCHES_DIR/clang/lib"

ac_add_options --with-macos-private-frameworks=$CROSS_PRIVATE_FRAMEWORKS
ac_add_options --with-macos-sdk=$CROSS_SYSROOT

X=$(getconf NPROCESSORS_ONLN 2>/dev/null || getconf _NPROCESSORS_ONLN 2>/dev/null)

mk_add_options AUTOCLOBBER=1
mk_add_options MOZ_MAKE_FLAGS=-j${X}

ac_add_options "MOZ_ALLOW_LEGACY_EXTENSIONS=1"
ac_add_options --disable-debug
ac_add_options --disable-dmd
ac_add_options --disable-geckodriver
ac_add_options --disable-profiling
ac_add_options --disable-tests
ac_add_options --disable-verify-mar
ac_add_options --enable-application=browser
ac_add_options --enable-ccache=sccache
ac_add_options --enable-lto
ac_add_options --enable-optimize="-O3 -msse3 -w"
ac_add_options --enable-proxy-bypass-protection
ac_add_options --enable-rust-simd
ac_add_options --enable-updater
ac_add_options --target=x86_64-apple-darwin
ac_add_options --with-branding=browser/branding/waterfox

unset MOZ_STDCXX_COMPAT
